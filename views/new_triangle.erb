<h1>Add a new triangle</h1>

<form action="/triangle" method="post">
  <div class="form-group">
    <label for="side1">Side 1</label>
    <input id="n" name="side1" class="form-control" type="text">
    <label for="side2">Side 2</label>
    <input id="n" name="side2" class="form-control" type="text">
    <label for="side3">Side 3</label>
    <input id="n" name="side3" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>
